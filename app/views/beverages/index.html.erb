<% colors = {coffee: "#F00", tea: "#0F0" } %>

<% content_for :styles do %>
<style>
  body {
    font-family: "Helvetica Neue", Helvetica, Arial, sans-serif;
    width: 960px;
    height: 500px;
    position: relative;
  }
  path.slice{
    stroke-width:2px;
  }
  polyline{
    opacity: .3;
    stroke: black;
    stroke-width: 2px;
    fill: none;
  }
  svg text.percent{
    fill:white;
    text-anchor:middle;
    font-size:12px;
  }
</style>
<% end %>

<script>
  var salesData=<%=raw @totals.map {|key, value| {label: key, value: value, color: colors[key.to_sym] } }.to_json.html_safe %>;

  var svg = d3.select("body").append("svg").attr("width",700).attr("height",300);

  svg.append("g").attr("id","salesDonut");

  Donut3D.draw("salesDonut", salesData, 150, 150, 130, 100, 30, 0.4);
</script>
